doctype html
html
  head
    link(href="libs/bootstrap/dist/css/bootstrap.min.css", rel="stylesheet")
    link(rel='stylesheet', href='/stylesheets/loginPage.css')

  body
    div(class="container")
      div(id="carousel-example-generic", class="carousel slide col-sm-4 col-sm-offset-4", data-ride="carousel")
        ol(class="carousel-indicators")
          li(data-target="#carousel-example-generic", data-slide-to="0", class="active")
        div(class="carousel-inner")
          div(class="item active")
            img(src="images/words.jpg")
        a(class="left carousel-control", href="#carousel-example-generic", data-slide="prev")
          span(class="glyphicon glyphicon-chevron-left")
        a(class="right carousel-control", href="#carousel-example-generic", data-slide="next")
          span(class="glyphicon glyphicon-chevron-right")
    div(class="auth-form col-sm-4 col-sm-offset-4")
        if message.length > 0
           div(class="alert alert-danger") #{message}
        a(href="/auth/facebook")
            img(class="facebook-auth-image", src="images/login-with-facebook.png")
  script(src="libs/jquery/dist/jquery.min.js", type="text/javascript")
  script(src="libs/bootstrap/dist/js/bootstrap.min.js", type="text/javascript")

